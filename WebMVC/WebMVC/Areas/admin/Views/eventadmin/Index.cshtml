@model IEnumerable<ObjectBusiness.Event>

@{
    ViewData["Title"] = "Event";
    Layout = "~/Views/Shared/_LayoutAdmin.cshtml";
}

<!-- Table Start -->
<div class="container-fluid pt-4 px-4">
    <div class="row g-4">
        <div class="col-12">
            <h1>Event</h1>
            <a href="~/admin/eventadmin/create" class="btn btn-danger">Create new</a>
            <div class="bg-secondary rounded h-100 p-4">
                <div class="table-responsive">
                    <table class="table">
                        <thead>
                            <tr>
                                <th scope="col">@Html.DisplayNameFor(model => model.EventId)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.CategoryId)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.AccountId)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.EventName)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.EventDescription)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Content)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.Picture)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.NumberOfParticipants)</th>
                                <th scope="col">@Html.DisplayNameFor(model => model.DateCreated)</th>
                                <th scope="col">Control</th>
                                <th scope="col"></th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var item in Model)
                            {
                                <tr>
                                    <th>@item.EventId</th>
                                    <th>@item.CategoryId</th>
                                    <td>@item.AccountId</td>
                                    <td>@item.EventName</td>
                                    <td>@item.EventDescription</td>
                                    <td>@item.Content</td>
                                    <td><img src="~/upload/images/@item.Picture" alt="picture" width="50px" height="50px" style="object-fit:cover" /></td>
                                    <td>@item.NumberOfParticipants</td>
                                    <td>@Convert.ToDateTime(item.DateCreated).ToString("dd/MM/yyyy")</td>
                                    <td><a href="#" class="delete-link btn btn-danger" data-id="@item.EventId" data-confirm="Do you really want to delete?" data-toggle="modal" data-target="#confirmModal">Delete</a></td>
                                    <td><a href="~/admin/eventadmin/edit/@item.EventId" class="btn btn-danger">Edit</a></td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Table End -->
<div class="modal fade" id="confirmModal" tabindex="-1" role="dialog" aria-labelledby="confirmModalLabel" aria-hidden="true">
    <div class="modal-dialog" role="document">
        <div class="modal-content">
            <div class="modal-header">
                <h5 class="modal-title" id="confirmModalLabel">Confirm delete</h5>
                <button type="button" class="close" data-dismiss="modal" aria-label="Close">
                    <span aria-hidden="true">&times;</span>
                </button>
            </div>
            <div class="modal-body">
                <p id="confirmMessage"></p>
            </div>
            <div class="modal-footer">
                <button type="button" class="btn btn-secondary" data-dismiss="modal">Cancel</button>
                <button type="button" class="btn btn-danger" id="confirmDelete">Delete</button>
            </div>
        </div>
    </div>
</div>
@section Scripts {
    @{
        DateTime date = DateTime.Now;
    }
    <script src="~/admin/js/controller/eventcontroller.js?@date"></script>
}