@model IEnumerable<ObjectBusiness.Account>
@{
    ViewData["Title"] = "Profile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@foreach (var item in Model)
{
    <div class="main-content">
        <!-- Header -->
        <div class="header pb-8 pt-5 pt-lg-8 d-flex align-items-center" style="min-height: 600px; background-image: url(@Url.Content("~/image/banner_bg.jpg")); background-size: cover; background-position: center top;">
            <!-- Mask -->
            <span class="mask bg-gradient-default opacity-8"></span>
            <!-- Header container -->
            <div class="container-fluid d-flex align-items-center">
                <div class="row">
                    <div class="col-lg-7 col-md-10">
                        <h1 class="display-2 text-white">Hello @item.FullName</h1>
                        <p class="text-white mt-0 mb-5">This is your profile page. You can see the progress you've made with your work and manage your projects or assigned tasks</p>
                        <a href="@Url.Action("edit","profile",new{id=item.AccountId})" class="btn btn-info">Edit profile</a>
                        @if (TempData.Peek("message") != null)
                        {
                            <h4 style="background-color:@TempData["bgcolor"];color:@TempData["color"];padding:10px;border-radius:10px;margin-top:2%">@TempData["message"]</h4>
                        }
                    </div>
                </div>
            </div>
        </div>
        <!-- Page content -->
        <div class="container-fluid mt--7">
            <div class="row">
                <div class="col-xl-4 order-xl-2 mb-5 mb-xl-0">
                    <div class="card card-profile shadow">
                        <div class="row justify-content-center">
                            <div class="col-lg-3 order-lg-2">
                                <div class="card-profile-image">
                                    <a href="#">
                                        @if (item.Picture != null)
                                        {
                                            <img src="~/image/@item.Picture" class="rounded-circle">
                                        }
                                        else
                                        {
                                            <img src="~/image/icon_user.png" class="rounded-circle">
                                        }
                                    </a>
                                </div>
                            </div>
                        </div>
                        <div class="card-header text-center border-0 pt-8 pt-md-4 pb-0 pb-md-4">
                        </div>
                        <div class="card-body pt-0 pt-md-4">
                            <div class="row">
                                <div class="col">
                                    <div class="card-profile-stats d-flex justify-content-center mt-md-5">
                                        <div>
                                            <span class="heading">@item.Point</span>
                                            <span class="description">Point</span>
                                        </div>
                                        <div>
                                            <span class="heading">@item.Star</span>
                                            <span class="description">Star</span>
                                        </div>
                                    </div>
                                </div>
                            </div>
                            <div class="text-center">
                                <h3>
                                    @item.FullName<span class="font-weight-light">, @item.Age</span>
                                </h3>
                                <div class="h5 font-weight-300">
                                    @item.Address, @item.Region
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="col-xl-8 order-xl-1">
                    <div class="card bg-secondary shadow">
                        <div class="card-header bg-white border-0">
                            <div class="row align-items-center">
                                <div class="col-8">
                                    <h3 class="mb-0">My account</h3>
                                </div>
                            </div>
                        </div>
                        <div class="card-body">
                            <form>
                                <h6 class="heading-small text-muted mb-4">User information</h6>
                                <div class="pl-lg-4">
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-username">User name</label>
                                                <input type="text" id="input-username" class="form-control form-control-alternative" value="@item.UserName" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Email address</label>
                                                <input type="email" id="input-email" class="form-control form-control-alternative" value="@item.Email" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-first-name">Password</label>
                                                <input type="password" id="input-first-name" class="form-control form-control-alternative" value="@item.Password" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-last-name">City</label>
                                                <input type="text" id="input-last-name" class="form-control form-control-alternative" value="@item.City" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-first-name">Region</label>
                                                <input type="text" id="input-first-name" class="form-control form-control-alternative" value="@item.Region" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-last-name">Address</label>
                                                <input type="text" id="input-last-name" class="form-control form-control-alternative" value="@item.Address" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-username">Birth name</label>
                                                <input type="text" id="input-username" class="form-control form-control-alternative" value="@item.FullName" disabled>
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group">
                                                <label class="form-control-label" for="input-email">Age</label>
                                                <input type="email" id="input-email" class="form-control form-control-alternative" value="@item.Age" disabled>
                                            </div>
                                        </div>
                                    </div>
                                    <div class="row">
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-username">Gender</label>
                                                @if (item.Gender)
                                                {
                                                    <input type="text" id="input-username" class="form-control form-control-alternative" value="Male" disabled>
                                                }
                                                else
                                                {
                                                    <input type="text" id="input-username" class="form-control form-control-alternative" value="Female" disabled>
                                                }
                                            </div>
                                        </div>
                                        <div class="col-lg-6">
                                            <div class="form-group focused">
                                                <label class="form-control-label" for="input-last-name">Phone number</label>
                                                <input type="number" id="input-last-name" class="form-control form-control-alternative" value="@item.PhoneNumber" disabled>
                                            </div>
                                        </div>
                                    </div>
                                </div>
                            </form>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
}