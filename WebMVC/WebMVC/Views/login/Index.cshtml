@{

}
<!doctype html>
<html lang="en">
<head>
    <title>Book Store - Login</title>
    <meta charset="utf-8">
    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">

    <link href="https://fonts.googleapis.com/css?family=Lato:300,400,700&display=swap" rel="stylesheet">

    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="~/Login/css/style.css">
    <link rel="icon" href="~/image/logo book store.png" type="image/png">

</head>
<body class="img js-fullheight" style="background-image: url(@Url.Content("~/Login/images/book_store.jpg"));">
    <style>
        .validation-summary-errors {
            background-color: red;
            color: white;
            border-radius: 5px;
            width: 100%;
        }
    </style>
    <section class="ftco-section">
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-md-6 col-lg-4">
                    <div class="login-wrap p-0">
                        <h3 class="mb-4 text-center">Have an account?</h3>
                        @using (Html.BeginForm("", "login", FormMethod.Post, new { @class = "signin-form" }))
                        {
                            @Html.AntiForgeryToken()

                            @Html.ValidationSummary(true, "")
                            <div class="form-group">
                                <input type="text" name="userName" class="form-control" placeholder="Username" required>
                            </div>
                            <div class="form-group">
                                <input id="password-field" type="password" name="password" class="form-control" placeholder="Password" required>
                                <span toggle="#password-field" class="fa fa-fw fa-eye field-icon toggle-password"></span>
                            </div>
                            <div class="form-group">
                                <button type="submit" class="form-control btn btn-primary submit px-3">Sign In</button>
                            </div>
                            <div class="form-group d-md-flex">
                                <div class="w-50">
                                    <label class="checkbox-wrap checkbox-primary">
                                        Remember Me
                                        <input type="checkbox" checked>
                                        <span class="checkmark"></span>
                                    </label>
                                </div>
                                <div class="w-50 text-md-right">
                                    <a href="@Url.Action("","forgotpassword")" style="color: #fff">Forgot Password</a>
                                </div>
                            </div>
                        }
                        <p class="w-100 text-center">&mdash; Or &mdash;</p>
                        @if (!string.IsNullOrEmpty(Context.Request.Query["change_account"]))
                        {
                            <div class="social d-flex text-center">
                                <a href="@Url.Action("","register",new {change_account="true"})" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Create account ?</a>
                            </div>
                        }
                        else
                        {
                            <div class="social d-flex text-center">
                                <a href="@Url.Action("","register")" class="px-2 py-2 mr-md-1 rounded"><span class="ion-logo-facebook mr-2"></span> Create account ?</a>
                            </div>
                        }
                    </div>
                </div>
            </div>
        </div>
    </section>

    <script src="~/Login/js/jquery.min.js"></script>
    <script src="~/Login/js/popper.js"></script>
    <script src="~/Login/js/bootstrap.min.js"></script>
    <script src="~/Login/js/main.js"></script>

</body>
</html>

